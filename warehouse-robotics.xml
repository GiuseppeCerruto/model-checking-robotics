		<declaration>clock x;

int fint_test(double x) {
    int y=0;
    while(y&lt;x) y++;
    return y;
}

Task create_task(){
    double rand;
    int i;
    bool flag=false;
    Task t;
    do {
        rand=random(P-1);
        i= fint_test(rand); 
        if(pods[i].assigned==false){
            flag=true;
            pods[i].assigned=true;
        }
    } while(!flag);
    t.pod=pods[i];
    t.id = i;
    return t;
}

void enqueue(){
    queue_length++;
    tasks[tail]=create_task();
    tail=(tail+1)%MAX_T;
}
